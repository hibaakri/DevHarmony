{% extends 'base.html.twig' %}

{% block title %}Liste des Avis{% endblock %}

{% block body %}
<!-- Ajouter Bootstrap CSS si ce n'est pas déjà inclus -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container my-5">
    <!-- En-tête stylisée -->
    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">Liste des Avis</h2>
        <p class="text-muted">Consultez, modifiez ou ajoutez des avis.</p>
    </div>

    <!-- Table des avis -->
    <div class="table-responsive shadow-sm rounded" style="background-color: #f9f9f9;">
        <table class="table table-hover table-bordered align-middle">
            <thead class="bg-primary text-white">
                <tr>
                    <th>Client</th>
                    <th>Produit</th>
                    <th>Commentaire</th>
                    <th>Date de création</th>
                    <th>Réponse</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for avis in avis %}
                    <tr>
                        <td>{{ avis.user.email }}</td>
                        {% if avis.produit %}
                            <td>{{ avis.produit.id }}</td>
                        {% else %}
                            <td class="text-danger">Produit introuvable!</td>
                        {% endif %}
                        <td>{{ avis.commentaire }}</td>
                        <td>{{ avis.datecreation | date('d/m/Y') }}</td>
                        <td>{{ avis.reponse }}</td>
                        <td class="text-center">
                            <a href="/avis/show/{{ avis.id }}" class="btn btn-info btn-sm">
                                <i class="bi bi-eye"></i> Consulter
                            </a>
                            <a href="/avis/edit/{{ avis.id }}" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil-square"></i> Modifier
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <!-- Bouton Ajouter un Avis -->
    <div class="text-center mt-4">
        <a href="/avis/add" class="btn btn-success btn-lg">
            <i class="bi bi-plus-circle"></i> Ajouter un Avis
        </a>
    </div>
</div>

<!-- Ajout des icônes Bootstrap -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
{% endblock %}
