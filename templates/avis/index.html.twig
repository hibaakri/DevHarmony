{% extends 'Admin.html.twig' %}

{% block title %}Hello AvisController!{% endblock %}

{% block body %}
<!-- Add Bootstrap CSS if not already included in your base layout -->
 
<div class="container mt-4">
    <h2 class="mb-4 text-light">Liste des Avis</h2>

    <table class="table table-dark table-striped table-bordered">
        <thead class="thead-light">
            <tr>
            
                <th>Client</th>
                <th>Produit</th> 
                <th>Commentaire</th>
                 <th>Date cr√©ation</th>
                  <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for avis in avis %}
                <tr>
                     <td>{{ avis.user.email }}</td>
                         <td><a href="produit/show/{{ avis.produit.id }}">{{ avis.produit.titre }}</a></td>
                   
                    <td>{{ avis.commentaire }}</td>
                     <td>{{ avis.datecreation | date() }}</td>
                      <td>
                        <a href="produit/show/{{ avis.produit.id }}" class="btn btn-info btn-sm">Consulter</a>
                     </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

 </div>

<!-- Bootstrap JS (optional, for features like modals, dropdowns) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

{% endblock %}
