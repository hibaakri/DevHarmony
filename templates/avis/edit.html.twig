{% extends 'base.html.twig' %}

{% block title %}Modifier l'Avis{% endblock %}

{% block body %}
<!-- Ajouter le lien vers Bootstrap si ce n'est pas déjà fait dans votre base -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- Ajouter votre CSS personnalisé -->
<style>
    /* Style général pour les champs */
    .custom-input {
        border-radius: 15px;
        border: 1px solid #ddd;
        background-color: #f8f9fa;
        transition: all 0.3s ease;
    }

    .custom-input:focus {
        border-color: #007bff; /* Couleur au focus */
        box-shadow: 0 0 8px rgba(0, 123, 255, 0.25); /* Ombre au focus */
        background-color: #ffffff;
    }

    .form-label {
        font-weight: 500;
        font-size: 1.1rem;
        color: #495057;
        margin-bottom: 0.5rem;
    }

    /* Bouton avec un effet de survol */
    .btn-primary {
        border-radius: 30px;
        padding: 12px 30px;
        font-size: 1.1rem;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        transform: translateY(-2px);
    }

    /* Effet de box-shadow sur la carte */
    .card {
        border-radius: 20px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }
</style>

<div class="container mt-5">
    <h2 class="mb-4 text-dark text-center">Modifier l'Avis</h2>

    <div class="card bg-light p-5">
        <!-- Formulaire pour ajouter/modifier un avis -->
    {# <div class="mt-5">
    <h3 class="text-center">Ajouter ou Modifier un Avis</h3>
    <form method="POST" action="/avis/save" class="needs-validation" novalidate> #}
        <!-- Commentaire -->
        <div class="mb-3">
            <label for="commentaire" class="form-label">Commentaire</label>
            <textarea 
                class="form-control" 
                id="commentaire" 
                name="commentaire" 
                rows="3" 
                required>{{ form.commentaire.vars.value }}</textarea>
            <div class="invalid-feedback">Veuillez ajouter un commentaire.</div>
        </div>

        <!-- Note -->
        <div class="mb-3">
            <label for="note" class="form-label">Note</label>
            <select class="form-select" id="note" name="note" required>
                <option value="" disabled selected>Choisissez une note</option>
                <option value="1">1 - Mauvais</option>
                <option value="2">2 - Passable</option>
                <option value="3">3 - Moyen</option>
                <option value="4">4 - Bon</option>
                <option value="5">5 - Excellent</option>
            </select>
            <div class="invalid-feedback">Veuillez sélectionner une note.</div>
        </div>

        <!-- Réponse -->
        <div class="mb-3">
            <label for="reponse" class="form-label">Réponse</label>
            <input 
                type="text" 
                class="form-control" 
                id="reponse" 
                name="reponse" 
                value="{{ form.reponse.vars.value }}" 
                required>
            <div class="invalid-feedback">Veuillez fournir une réponse.</div>
        </div>

        <!-- Bouton de soumission -->
       <button type="submit" class="btn btn-primary w-100">
    <i class="bi bi-save"></i> Enregistrer
</button>
    </form>
</div>

</div>
    </div>
</div>

<!-- Ajouter les icônes Bootstrap -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>

{% endblock %}
