{% extends 'base.html.twig' %}

{% block title %}Hello AvisController!{% endblock %}

{% block body %}
<!-- Add Bootstrap CSS if not already included in your base layout -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
    <h2 class="mb-4 text-light">Modifier l'Avis</h2>

    <div class="card bg-dark text-light p-4">
        {{ form_start(form) }}

        <div class="mb-3">
            {{ form_widget(form) }}
        </div>

        <button type="submit" class="btn btn-success" >Modifier Avis</button>

        {{ form_end(form) }}
    </div>
</div>

<!-- Bootstrap JS (optional, for features like modals, dropdowns) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

{% endblock %}
