{% extends 'base.html.twig' %}

{% block title %}Détails de l'Avis{% endblock %}

{% block body %}
<!-- Ajout de Bootstrap CSS si ce n'est pas déjà inclus dans la mise en page de base -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container my-5">
    <!-- Fond clair avec des coins arrondis -->
    <div class="card shadow-sm border-0" style="background-color: #f9f9f9;">
        <div class="card-header bg-primary text-white text-center">
            <h2 class="mb-0">Détails de l'Avis</h2>
        </div>
        <div class="card-body">
            <!-- Liste des détails -->
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <strong>Commentaire :</strong> {{ avis.commentaire }}
                </li>
                <li class="list-group-item">
                    <strong>Date de création :</strong> {{ avis.datecreation | date('d/m/Y') }}
                </li>
                <li class="list-group-item">
                    <strong>Réponse :</strong> {{ avis.reponse }}
                </li>
            </ul>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a href="/avis/edit/{{ avis.id }}" class="btn btn-warning btn-sm">
                <i class="bi bi-pencil-square"></i> Modifier
            </a>
            <a href="/avis/delete/{{ avis.id }}" class="btn btn-danger btn-sm">
                <i class="bi bi-trash"></i> Supprimer
            </a>
        </div>
    </div>

   
<!-- Script pour la validation Bootstrap -->
<script>
    (function () {
        'use strict';
        const forms = document.querySelectorAll('.needs-validation');
        Array.from(forms).forEach(function (form) {
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    })();
</script>

<!-- Ajout des icônes Bootstrap -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
{% endblock %}
