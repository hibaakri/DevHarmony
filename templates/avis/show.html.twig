{% extends 'Admin.html.twig' %}

{% block title %}Hello AvisController!{% endblock %}

{% block body %}
<!-- Add Bootstrap CSS if not already included in your base layout -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
    <h2 class="mb-4 text-light">Détails de l'Avis</h2>

    <ul class="list-group">
        <li class="list-group-item bg-dark text-light">Id: {{ avis.id }}</li>
        <li class="list-group-item bg-dark text-light">Commentaire: {{ avis.commentaire }}</li>
        <li class="list-group-item bg-dark text-light">Note: {{ avis.note }}</li>
        <li class="list-group-item bg-dark text-light">Date de création: {{ avis.datecreation | date() }}</li>
        <li class="list-group-item bg-dark text-light">Visibilité: {{ avis.visibilite }}</li>
        <li class="list-group-item bg-dark text-light">Réponse: {{ avis.reponse }}</li>
        <li class="list-group-item bg-dark text-light">
            <a href="/avis/edit/{{ avis.id }}" class="btn btn-warning">Modifier avis</a>
        </li>
        <li class="list-group-item bg-dark text-light">
            <a href="/avis/delete/{{ avis.id }}" class="btn btn-danger">Supprimer avis</a>
        </li>
    </ul>
</div>

<!-- Bootstrap JS (optional, for features like modals, dropdowns) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

{% endblock %}
