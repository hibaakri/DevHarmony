{% extends 'base.html.twig' %}

{% block title %}Ajouter un Avis{% endblock %}

{% block body %}
<!-- Add Bootstrap CSS if not already included in your base layout -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card bg-dark text-light shadow-sm">
                <div class="card-header text-center bg-success">
                    <h3 class="mb-0">Ajouter un Avis</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form, { 'attr': {'class': 'needs-validation'} }) }}
                    
                    <div class="mb-3">
                        {{ form_widget(form, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-success">Ajouter Avis</button>
                    </div>
                    
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS (optional, for features like modals, dropdowns) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

{% endblock %}
