{% extends 'base.html.twig' %}

{% block title %}Forgot Password{% endblock %}

{% block body %}
<style>
    .forgot-password-container {
        max-width: 500px;
        margin: 50px auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f9f9f9;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

    .forgot-password-container h1 {
        font-size: 28px;
        margin-bottom: 20px;
        text-align: center;
        color: #333;
    }

    .forgot-password-container .form-group {
        margin-bottom: 15px;
    }

    .forgot-password-container label {
        font-weight: bold;
        margin-bottom: 5px;
        display: block;
        color: #555;
    }

    .forgot-password-container .form-control {
        border-radius: 5px;
    }

    .forgot-password-container .btn-primary {
        width: 100%;
        background-color: #007bff;
        border-color: #007bff;
        margin-top: 10px;
    }

    .forgot-password-container .alert {
        margin-bottom: 20px;
        font-size: 14px;
    }
</style>



<div class="container">
     <div class="forgot-password-container">
        <h1>Forgot your password?</h1>

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}


    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <form  action="{{ path('app_forgot_password') }}" method="POST">
        <div class="form-group">
            <label for="inputEmail">E-mail</label>
            <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Enter your email" required>
        </div>
        <button class="btn btn-primary" type="submit">Send Reset Link</button>
    </form>
</div>
{% endblock %}
