{% extends 'base.html.twig' %}
{% block body %}

<style>
    .reset-password-container {
        max-width: 400px;
        margin: 50px auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f9f9f9;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

    .reset-password-container h1 {
        font-size: 28px;
        margin-bottom: 20px;
        text-align: center;
        color: #333;
    }

    .reset-password-container .form-group {
        margin-bottom: 15px;
    }

    .reset-password-container label {
        font-weight: bold;
        margin-bottom: 5px;
        display: block;
        color: #555;
    }

    .reset-password-container .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
        font-size: 16px;
    }

    .reset-password-container .btn-primary {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        background-color: #007bff;
        border-color: #007bff;
        color: #fff;
        border-radius: 5px;
        margin-top: 10px;
    }

    .reset-password-container .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004085;
    }
</style>


<div class="reset-password-container">
    <h1>Reset Password</h1>
<form method="POST">
    <input type="password" name="password"  class="form-control"  placeholder="Enter your new password" required>
    <button class="btn btn-primary" type="submit">Reset Password</button>
</form>
{% endblock %}
