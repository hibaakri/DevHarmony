{% extends 'base.html.twig' %}

{% block title %}Confirmation de la commande{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Commande Confirmée !</h1>
    <p>Merci pour votre commande. Voici les détails :</p>
    <ul>
        <li><strong>Adresse de livraison :</strong> {{ commande.adresseLivraison }}</li>
        <li><strong>Date de la commande :</strong> {{ commande.dateCommande|date('d/m/Y H:i') }}</li>
    </ul>
    <a href="{{ path('app_produit_index') }}" class="btn btn-primary">Retour à la boutique</a>
</div>
{% endblock %}
