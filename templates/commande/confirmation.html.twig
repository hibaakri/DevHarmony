{# templates/commande/confirmation.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Confirmation de la commande{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Confirmation de la commande</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Adresse de livraison</th>
                <th>Code Postal</th>
                <th>Gouvernement</th>
                <th>Téléphone</th>
                <th>Date de commande</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ commande.adresseLivraison }}</td>
                <td>{{ commande.codePostal }}</td>
                <td>{{ commande.gouvernement }}</td>
                <td>{{ commande.telephone }}</td>
                <td>{{ commande.dateCommande|date('d/m/Y H:i') }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_commande_creer') }}" class="btn btn-primary">Retourner à la commande</a>
</div>
{% endblock %}
