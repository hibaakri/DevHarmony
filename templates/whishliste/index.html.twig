{% extends 'base.html.twig' %}

{% block title %} My Whishliste {% endblock %}

{% block body %}
    <h1 class="my-4">My Whishliste </h1>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">Numero</th>
                <th scope="col">Actions</th>
            </tr>

        </thead>
        <tbody>

        {% for whishliste in whishlistes %}
            <tr>
                <td>{{ whishliste.id }}</td>
                <td>
                    <a href="{{ path('app_whishliste_show', {'id': whishliste.id}) }}" class="btn btn-primary btn-sm">show</a>
                    <a href="{{ path('app_whishliste_edit', {'id': whishliste.id}) }}" class="btn btn-primary btn-sm">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2" class="text-center">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_whishliste_new') }}" class="btn btn-success mt-3">Create new</a>
{% endblock %}
