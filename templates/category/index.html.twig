{% extends 'Admin.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="example-wrapper container mt-5">
    <h4 class="mb-4 text-center ">Liste des Catégories</h4>
    <table class="table table-striped table-bordered">
        <thead class="bg-light text-primary">
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Description</th>
                <th colspan="3" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categorys %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.titre }}</td>
                <td>{{ category.description }}</td>
                <td class="text-center">
                    <a href="/category/show/{{ category.id }}" class="btn btn-outline-primary btn-sm">
                        Consulter
                    </a>
                </td>
                <td class="text-center">
                    <a href="/category/edit/{{ category.id }}" class="btn btn-outline-warning btn-sm">
                        Modifier
                    </a>
                </td>
                <td class="text-center">
                    <a href="/category/delete/{{ category.id }}" class="btn btn-outline-danger btn-sm">
                        supprimer
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="text-center mt-3">
        <a href="/category/add" class="btn btn-success btn-lg">
            Ajouter une Catégorie
        </a>
    </div>
</div>
{% endblock %}
