{% extends 'Admin.html.twig' %}

{% block title %}Hello ProduitController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="container mt-5">
    <div class="card shadow-sm border-0 bg-dark text-light">
        <div class="card-header bg-secondary text-white text-center">
            <h4 class="mb-0 fw-bold text-dark">Modifier la Cat√©gorie</h4>
        </div>
        <div class="card-body">
             {{ form_start(form, {'attr': { 'novalidate': 'novalidate'}}) }}

            <!-- Champ Titre -->
            <div class="form-group mb-3">
                {{ form_label(form.titre, null, {'label_attr': {'class': 'form-label text-white-50 fw-bold'}}) }}
                {{ form_widget(form.titre, {'attr': {'class': 'form-control bg-dark text-light border-secondary'}}) }}
                {% if form.titre.vars.errors|length > 0 %}
                    <div class="text-danger ">
                        {% for error in form.titre.vars.errors %}
                            <small><i class="bi bi-exclamation-circle"></i> {{ error.message }}</small>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>

            <!-- Champ Description -->
            <div class="form-group mb-3">
                {{ form_label(form.description, null, {'label_attr': {'class': 'form-label text-white-50 fw-bold'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control bg-dark text-light border-secondary'}}) }}
                {% if form.description.vars.errors|length > 0 %}
                    <div class="text-danger mt-1">
                        {% for error in form.description.vars.errors %}
                            <small><i class="bi bi-exclamation-circle"></i> {{ error.message }}</small>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>

            <!-- Bouton Soumettre -->
            <div class="text-end">
                <button type="submit" class="btn btn-success px-4 py-2 shadow-sm">
                    <i class="bi bi-check-circle"></i> Enregistrer
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
