{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-primary">Votre Panier</h1>
    
    {% if produits is empty %}
        <div class="alert alert-info text-center">Votre panier est vide.</div>
        <div class="text-center mt-4">
            <a href="{{ path('app_produit_index') }}" class="btn btn-primary">Voir les produits disponibles</a>
        </div>
    {% else %}
        <table class="table table-striped table-bordered">
            <thead class="table-primary">
                <tr>
                    <th>Produit</th>
                    <th>QuantitÃ©</th>
                    <th>Prix</th>
                    <th>Actions</th>
                </tr>
            </thead>
           <tbody>
                {% for produit in produits %}
                    <tr>
                        <td>{{ produit.produit.titre }}</td>
                        <td>
                            <form method="post" action="{{ path('app_panier_modifier', {'id': produit.produit.id}) }}" class="d-flex">
                                <input 
                                    type="number" 
                                    name="quantite" 
                                    value="{{ produit.quantite }}" 
                                    min="1" 
                                    class="form-control" 
                                    style="max-width: 80px;"
                                />
                                <button type="submit" class="btn btn-outline-primary ms-2">âœ”</button>
                            </form>
                        </td>
                        <td>{{ produit.produit.prix * produit.quantite }} dt</td>
                        <td>
                            <form method="post" action="{{ path('app_panier_supprimer', {'id': produit.produit.id}) }}">
                                <button type="submit" class="btn btn-outline-danger">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <!-- Affichage des notes -->
        <div class="mt-4">
            <div class="alert alert-info">
                <strong>{{ messageLivraisonGratuite }}</strong>
            </div>
            <div class="alert alert-info">
                <strong>{{ messageReduction }}</strong>
            </div>
        </div>

        <!-- Affichage du total -->
        <div class="mt-4 bg-light p-3 rounded">
            <p class="text-primary fs-6 mb-3">
                <strong>Total avant remise :</strong> <span class="text-dark">{{ total }} dt</span>
            </p>
            
            {% if remise > 0 %}
                <p class="text-success fs-6 mb-3">
                    ðŸŽ‰ <strong>Remise :</strong> -{{ remise }} dt
                </p>
            {% endif %}
            
            <p class="text-primary fs-6 mb-3">
                <strong>Frais de livraison :</strong> <span class="text-dark">{{ fraisLivraison }} dt</span>
            </p>
            
            <hr class="my-4">
            
            <p class="text-primary fs-6 mb-3">
                <strong>Total Ã  payer :</strong> <span class="text-dark">{{ totalAPayer }} dt</span>
            </p>
        </div>

        <!-- Bouton "Continuer mes achats" -->
        <a href="{{ path('app_produit_index') }}" class="btn btn-primary">Continuer mes achats</a>
        
        <!-- Bouton pour valider la commande -->
        <div class="d-flex justify-content-end mt-3" style="position: relative; top: -30px;">
    
    
           <a href="{{ path('app_commande_creer') }}" class="btn btn-success btn-lg">Valider la commande</a>

           </d
        </div>
    {% endif %}
</div>
{% endblock %}
