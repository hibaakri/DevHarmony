{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Votre Panier</h1>
    
    {% if produits is empty %}
        <div class="alert alert-info text-center">Votre panier est vide.</div>
        <div class="text-center mt-4">
            <a href="{{ path('app_produit_index') }}" class="btn btn-primary">Voir les produits disponibles</a>
        </div>
    {% else %}
        <table class="table">
            <thead>
                <tr>
                    <th>Produit</th>
                    <th>Quantité</th>
                    <th>Prix</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for produit in produits %}
                    <tr>
                        <td>{{ produit.produit.titre }}</td>
                        <td>
                            <!-- Formulaire pour modifier la quantité -->
                            <form method="post" action="{{ path('app_panier_modifier', {'id': produit.produit.id}) }}" class="d-flex">
                                <input 
                                    type="number" 
                                    name="quantite" 
                                    value="{{ produit.quantite }}" 
                                    min="1" 
                                    class="form-control" 
                                    style="max-width: 80px;"
                                />
                                <button type="submit" class="btn btn-success ms-2">✔</button>
                            </form>
                        </td>
                        <td>{{ produit.produit.prix * produit.quantite }} €</td>
                        <td>
                            <!-- Formulaire pour supprimer le produit -->
                            <form method="post" action="{{ path('app_panier_supprimer', {'id': produit.produit.id}) }}">
                                <button type="submit" class="btn btn-danger">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <!-- Affichage du total -->
        <div class="d-flex justify-content-between">
            <h4>Total a payer :</h4>
            <h4>{{ total }} €</h4>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <!-- Bouton "Continuer mes achats" -->
            <a href="{{ path('app_produit_index') }}" class="btn btn-primary">Continuer mes achats</a>
            
           
        </div>
        <!-- Bouton pour valider la commande -->
        <div class="d-flex justify-content-end mt-4">
             <a href="{{ path('app_commande_creer') }}" class="btn btn-success">Valider la commande</a>
        </div>

    {% endif %}
</div>
{% endblock %}
