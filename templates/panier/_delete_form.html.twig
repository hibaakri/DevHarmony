{% extends 'base.html.twig' %}

{% block title %}Suppression du Produit{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card text-center shadow">
        <div class="card-header bg-danger text-white">
            <h4>Suppression du Produit</h4>
        </div>

        <div class="card-body">
            <p class="card-text">
                Êtes-vous sûr de vouloir supprimer ce produit de votre panier ? Cette action est <strong>irréversible</strong>.
            </p>

            <form method="post" action="{{ path('app_panier_supprimer', {'id': panier.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ panier.id) }}">
                <button class="btn btn-danger btn-lg" type="submit">Confirmer la suppression</button>
            </form>
        </div>

        <div class="card-footer">
            <a href="{{ path('app_panier_afficher') }}" class="btn btn-secondary">Annuler et revenir</a>
        </div>
    </div>
</div>
{% endblock %}

