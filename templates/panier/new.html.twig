{% extends 'base.html.twig' %}

{% block title %}Ajouter un Produit au Panier{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-primary">Ajouter un Produit</h1>

        <form action="{{ path('app_panier_ajouter', {'id': produit.id}) }}" method="post">
            <div class="form-group">
                <label for="quantite">Quantit√©</label>
                <input type="number" name="quantite" id="quantite" value="1" min="1" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary mt-3">Ajouter au Panier</button>
        </form>

        <div class="mt-4">
            <a href="{{ path('app_panier_afficher') }}" class="btn btn-secondary">Voir le Panier</a>
        </div>
    </div>
{% endblock %}
