{% extends 'base.html.twig' %}

{% block title %}Ajouter une Demande{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2>Ajouter une Demande</h2>
        </div>
        <div class="card-body">
            {{ form_start(form, { 'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'} }) }}

            <!-- Type_probleme Field -->
            <div class="form-group mb-3">
                {{ form_label(form.Type_probleme, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.Type_probleme, {'attr': {'class': 'form-control'}}) }}
                <div class="invalid-feedback">
                    Veuillez sélectionner un type de problème.
                </div>
            </div>

            <!-- Description_probleme Field -->
            <div class="form-group mb-3">
                {{ form_label(form.Description_probleme, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.Description_probleme, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                <div class="invalid-feedback">
                    Veuillez décrire le problème.
                </div>
            </div>

            <!-- Image Field -->
            <div class="form-group mb-3">
                {{ form_label(form.image, 'Insérer votre image', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                <div class="invalid-feedback">
                    Veuillez sélectionner une image à télécharger.
                </div>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary">Ajouter Demande</button>

            {{ form_end(form) }}
        </div>
    </div>
</div>

{% endblock %}
