{% extends 'Admin.html.twig' %}

{% block title %}Hello ServiceApresVenteController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
   <table border="1">
            <thead>
                <th>#</th>
                <th>Type probleme</th>
                <th>Description probleme</th>
                <th>Date demande</th>
                <th>Etat demande</th>
                <th>Date resolution</th>
                <th>Commentaire technicien</th>
            </thead>
            <tbody> {% for service_apres_vente in service_apres_vente %}
                <tr>
                    

                    <td>{{service_apres_vente.id}}</td>
                    <td>{{service_apres_vente.typeprobleme}}</td>
                    <td>{{service_apres_vente.descriptionprobleme}}</td>
                    <td>{{service_apres_vente.datedemande  |date()}}</td>
                    <td>{{service_apres_vente.etatdemande}}</td>
                    <td>{{service_apres_vente.dateresolution |date()}}</td>
                    <td>{{service_apres_vente.commentairetechnicien}}</td>
                    <td> <a href="/service/apres/vente/show/{{service_apres_vente.id}}" >Consulter demande</a></td>
                    <td> <a href="/service/apres/vente/edit/{{service_apres_vente.id}}" >Modifier demande</a></td>
                
                {% endfor %}
                </tr>
            </tbody>
        </table>

        <a href="/service/apres/vente/add" class="btn btn-primary">Ajouter demande </a>
       
{% endblock %}
