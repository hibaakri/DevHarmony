{% extends 'base.html.twig' %}

{% block title %}Détail de la Demande{% endblock %}

{% block body %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h1 class="mb-4">Détail de la Demande</h1>

    <ul class="list-group">
        <li class="list-group-item"><strong>ID:</strong> {{ service_apres_vente.id }}</li>
        <li class="list-group-item"><strong>Type de problème:</strong> {{ service_apres_vente.typeprobleme }}</li>
        <li class="list-group-item"><strong>Description:</strong> {{ service_apres_vente.descriptionprobleme }}</li>
        <li class="list-group-item"><strong>Date de demande:</strong> {{ service_apres_vente.datedemande | date('d/m/Y') }}</li>
        <li class="list-group-item"><strong>État de la demande:</strong> 
            {% if service_apres_vente.etatdemande %}
                <span class="badge bg-success">Ok</span>
            {% elseif service_apres_vente.etatdemande is null %}
                <span class="badge bg-warning text-dark">En attente</span>
            {% else %}
                <span class="badge bg-danger">Refusé</span>
            {% endif %}
        </li>
        {# <li class="list-group-item"><strong>Date de résolution:</strong> {{ service_apres_vente.dateresolution | date('d/m/Y') }}</li> #}
        <li class="list-group-item">
            <strong>Image associée:</strong><br>
            <img src="{{ asset('/service_apres_vente/' ~ service_apres_vente.image) }}" alt="Image" class="img-fluid mt-2">
        </li>
    </ul>

    <div class="mt-4">
        <a href="/service/apres/vente/edit/{{ service_apres_vente.id }}" class="btn btn-warning">Modifier la demande</a>
        <a href="/service/apres/vente/delete/{{ service_apres_vente.id }}" class="btn btn-danger">Supprimer la demande</a>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
