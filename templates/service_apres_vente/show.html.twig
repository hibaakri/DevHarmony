{% extends 'base.html.twig' %}

{% block title %}Détail de la Demande{% endblock %}

{% block body %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<div class="container mt-5">
    <h1 class="mb-4 text-primary">Détail de la Demande</h1>

    <ul class="list-group shadow-lg">
        {# <li class="list-group-item"><strong>ID:</strong> {{ service_apres_vente.id }}</li> #}
        <li class="list-group-item bg-light"><strong>Type de problème:</strong> {{ service_apres_vente.typeprobleme }}</li>
        <li class="list-group-item bg-light"><strong>Description:</strong> {{ service_apres_vente.descriptionprobleme }}</li>
        <li class="list-group-item bg-light"><strong>Date de demande:</strong> {{ service_apres_vente.datedemande | date('d/m/Y') }}</li>
        <li class="list-group-item bg-light"><strong>État de la demande:</strong> 
            {% if service_apres_vente.etatdemande %}
                <span class="badge bg-success text-white">Ok</span>
            {% elseif service_apres_vente.etatdemande is null %}
                <span class="badge bg-warning text-dark">En attente</span>
            {% else %}
                <span class="badge bg-danger text-white">Refusé</span>
            {% endif %}
        </li>
        {# <li class="list-group-item"><strong>Date de resolution:</strong> {{ service_apres_vente.dateresolution | date('d/m/Y') }}</li> #}
        <li class="list-group-item bg-light">
            <strong>Image associée:</strong><br>
            <img src="{{ asset('/service_apres_vente/' ~ service_apres_vente.image) }}" alt="Image" class="img-fluid mt-2 rounded">
        </li>
    </ul>

    <div class="mt-4">
        <a href="/service/apres/vente/edit/{{ service_apres_vente.id }}" class="btn btn-outline-primary me-3"><i class="fas fa-edit"></i> Modifier la demande</a>
        <a href="/service/apres/vente/delete/{{ service_apres_vente.id }}" class="btn btn-outline-danger"><i class="fas fa-trash-alt"></i> Supprimer la demande</a>
    </div>
</div>
{% endblock %}
