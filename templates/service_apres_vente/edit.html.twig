{% extends 'base.html.twig' %}

{% block title %}Modifier une Demande{% endblock %}

{% block body %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="card shadow-sm mx-auto" style="max-width: 700px;">
        <div class="card-header bg-primary text-white text-center">
            <h2>Modifier une Demande</h2>
        </div>
        <div class="card-body">
            {{ form_start(form, { 'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'} }) }}

            <!-- Type_probleme Field -->
            <div class="form-group mb-3">
                {{ form_label(form.Type_probleme, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.Type_probleme, {'attr': {'class': 'form-control'}}) }}
                <div class="invalid-feedback">
                    Veuillez sélectionner un type de problème.
                </div>
            </div>

            <!-- Description_probleme Field -->
            <div class="form-group mb-3">
                {{ form_label(form.Description_probleme, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.Description_probleme, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                <div class="invalid-feedback">
                    Veuillez décrire le problème.
                </div>
            </div>

            <!-- Image Field -->
            <div class="form-group mb-3">
                {{ form_label(form.image, 'Insérer votre image', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                <div class="invalid-feedback">
                    Veuillez sélectionner une image à télécharger.
                </div>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary">Modifier Demande</button>

            {{ form_end(form) }}
        </div>
        <div class="card-footer text-end">
            <a href="/service/apres/vente" class="btn btn-outline-secondary">
                Retour
            </a>
        </div>
    </div>
</div>

{% endblock %}
