{% extends 'base.html.twig' %}

{% block title %}Modifier une Demande{% endblock %}

{% block body %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="card shadow-sm mx-auto" style="max-width: 700px;">
        <div class="card-header bg-primary text-white text-center">
            <h2>Modifier une Demande</h2>
        </div>
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'container mt-5'}}) }}

<div class="card shadow-sm">
    <div class="card-header">
        <h4 class="mb-0">Modifier la Demande</h4>
    </div>
    <div class="card-body">
        <div class="mb-3">
            <label for="Type_probleme" class="form-label">Type de Problème :</label>
            {{ form_widget(form.Type_probleme, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="mb-3">
            <label for="Description_probleme" class="form-label">Description du Problème :</label>
            {{ form_widget(form.Description_probleme, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Insérer votre image :</label>
            {{ form_widget(form.image, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <!-- Ajoutez d'autres champs ici si nécessaire -->
    </div>

    <div class="card-footer text-center">
        <button type="submit" class="btn btn-primary w-100 mt-3">
            Modifier Demande
        </button>
    </div>
</div>

{{ form_end(form) }}

        </div>
        <div class="card-footer text-end">
            <a href="/service/apres/vente" class="btn btn-outline-secondary">
                Retour
            </a>
        </div>
    </div>
</div>
{% endblock %}
